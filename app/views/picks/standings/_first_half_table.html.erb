<table class="table table-hover table-bordered standings_table" id="standings_first" <% unless @current_matchday < 20 %>style="display:none;"<%end%>>
  <thead>
    <tr class="table_top">
      <th class="firstColumn">
        <span>Team</span> /
        <span>Owner</span>
      </th>
      <th class="secondColumn">Points</th>
      <% (-@first_timer..-1).each do |n|%>
      <th class="th_match" colspan="2">
        <%= -n %>
      </th>
      <%end%>
      <% if @first_timer < 7 %>
      <th class="th_spacer"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @firsthalftotals.each do |u|%>
    <tr>
      <td class="team_cell" title="<%=u.fname%> <%=u.lname%>">
        <%= u.team_name%>
      </td>
      <td class="secondColumn">
        <%= u.firsthalf %>
      </td>
      <% @upicks[u.id].first(@first_timer).reverse.each do |t|%>
        <% unless @unlocked_mds.include? t.matchday%>
      <td>
          <%= t.team_id %>
      </td>
      <td class="pt_cell">
          <%= t.points%>
      </td>
        <%else%>
      <td></td>
      <td>0</td>
        <%end%>
      <%end%>
      <% if @first_timer < 7 %>
      <td class="td_spacer"></td>
      <% end %>
    </tr>
    <%end%>
  </tbody>
</table>