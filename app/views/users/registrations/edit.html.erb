<br>
<div class="edit_form">
  <h2 class="page_header">Account Settings</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <% if flash.alert %>
  <div class="error_message">
    <p id="flash_alert"><%= flash.alert %></p>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :team_name%> <br />
    <%= f.text_field :team_name %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <label for="user_New Password" class="tool_tip" title="leave blank if you don't want to change it">New Password</label>
      <i class="fa fa-question-circle-o tool_tip"
        title="Password must be at least 8 characters and include: 1 uppercase, 1 lowercase, 1 number and 1 special character"
        aria-hidden="true"></i>
    <br />
    <%= f.password_field :password, autocomplete: "off" %>

  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :current_password %> 
          <i class="fa fa-asterisk tip_asterisk tool_tip"
            title="Required to make changes"
            aria-hidden="true"></i>
            <br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <div class="btn-break"></div>
  <div class="actions">
    <%= f.button "Update", class: "btn login-btn"%>
  </div>
<% end %>

